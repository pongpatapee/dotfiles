# --- Window Management ---

# alt - h : yabai -m window --focus west
# alt - j : yabai -m window --focus south
# alt - k : yabai -m window --focus north
# alt - l : yabai -m window --focus east

# In stack layout: cycle the stack.
# Otherwise (bsp/float): directional focus.
alt - h : yabai -m query --spaces --space | jq -e '.type == "stack"' \
          && (yabai -m window --focus stack.prev || yabai -m window --focus stack.last) \
          || yabai -m window --focus west

alt - l : yabai -m query --spaces --space | jq -e '.type == "stack"' \
          && (yabai -m window --focus stack.next || yabai -m window --focus stack.first) \
          || yabai -m window --focus east

alt - j : yabai -m query --spaces --space | jq -e '.type == "stack"' \
          && (yabai -m window --focus stack.next || yabai -m window --focus stack.first) \
          || yabai -m window --focus south

alt - k : yabai -m query --spaces --space | jq -e '.type == "stack"' \
          && (yabai -m window --focus stack.prev || yabai -m window --focus stack.last) \
          || yabai -m window --focus north


# Swap window position (similar to i3's Mod+Shift+j/k/h/l)
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Window/application management
alt - q : yabai -m window --close

# maximize window
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window float
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# balance out windows
shift + alt - e: yabai -m space --balance

# Toggle between bsp, float, and stack layout
alt - e : yabai -m space --layout bsp
ctrl + alt - f : yabai -m space --layout float
alt - s : yabai -m space --layout stack


# --- Space Management ---
# Configured focus in native mac os settings instead
# alt - 1 : yabai -m space --focus 1
# alt - 2 : yabai -m space --focus 2
# alt - 3 : yabai -m space --focus 3
# alt - 4 : yabai -m space --focus 4
# alt - 5 : yabai -m space --focus 5
# alt - 6 : yabai -m space --focus 6
# alt - 7 : yabai -m space --focus 7
# alt - 8 : yabai -m space --focus 8
# alt - 9 : yabai -m space --focus 9
# alt - 0 : yabai -m space --focus 10

# Move window to Space 1, 2, 3, etc. (similar to i3's Mod+Shift+1)
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9
shift + alt - 0 : yabai -m window --space 10


# --- Display management --- 
cmd + alt - h : yabai -m display --focus west
cmd + alt - j : yabai -m display --focus south
cmd + alt - k : yabai -m display --focus north
cmd + alt - l : yabai -m display --focus east
